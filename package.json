{
  "name": "app",
  "version": "1.0.0",
  "description": "This project serves as a testbed for evaluating the capabilities of **Jules** and **Gemini 3**. The objective is to build a chess engine using **Node.js**.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "eslint": "eslint . --fix",
    "test:e2e": "playwright test --project=chromium",
    "report:coverage": "bash tools/report_coverage.sh",
    "start": "node src/app.js",
    "start:coverage": "nyc --silent --no-clean node src/app.js",
    "tune": "node tools/pipeline.js"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "tests/**",
      "public/**"
    ],
    "reporter": [
      "json"
    ],
    "all": true
  },
  "jest": {
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "json-summary"
    ],
    "projects": [
      {
        "displayName": "backend",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/tests/**/*.test.js"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/tests/client/"
        ],
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "coverageThreshold": {
          "global": {
            "branches": 70,
            "functions": 80,
            "lines": 80,
            "statements": 80
          }
        }
      },
      {
        "displayName": "frontend",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/tests/client/**/*.test.js"
        ],
        "collectCoverageFrom": [
          "<rootDir>/public/**/*.js",
          "!<rootDir>/public/libs/**"
        ],
        "coverageThreshold": {
          "global": {
            "branches": 0,
            "functions": 0,
            "lines": 0,
            "statements": 0
          }
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nurdwerks/jules-gemini3-chess-engine.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/nurdwerks/jules-gemini3-chess-engine/issues"
  },
  "homepage": "https://github.com/nurdwerks/jules-gemini3-chess-engine#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nyc": "^17.1.0",
    "v8-to-istanbul": "^9.3.0"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@fastify/websocket": "^11.2.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "body-parser": "^2.2.1",
    "chess.js": "^1.4.0",
    "classic-level": "^3.0.0",
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "fastify": "^5.6.2",
    "fastify-autoload": "^3.12.0",
    "fastify-plugin": "^5.1.0",
    "jszip": "^3.10.1",
    "pgn-parser": "^2.2.1",
    "ws": "^8.18.3"
  }
}
